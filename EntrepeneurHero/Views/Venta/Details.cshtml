@model EntrepeneurHero.Models.Venta

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de la venta</h1>

<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Monto total:
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class = "col-sm-2">
            Método de pago:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetodoDePago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@{
    ViewData["Title"] = "Gestión de Emprendedores";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />

    <!-- Font Awesome CSS para los íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Estilos personalizados para los botones -->
    <style>
        .custom-btn {
            height: 120px; /* Ajusta la altura de los botones */
            font-size: 1.5rem; /* Aumenta el tamaño de la fuente */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Título de la página -->
        <div class="text-center mb-4">
            <h1 class="display-4">Gestión de Emprendedores</h1>
        </div>

        <!-- Grilla de botones 3x2 con colores e íconos, ocupando más espacio -->
        <div class="row text-center">
            <div class="col-12 col-md-6 mb-4">
                <button type="button" class="btn btn-primary btn-lg w-100 custom-btn" onclick="window.location.href='/Clientes'">
                    <i class="fas fa-user-tie"></i> Clientes
                </button>
            </div>
            <div class="col-12 col-md-6 mb-4">
                <button type="button" class="btn btn-success btn-lg w-100 custom-btn" onclick="window.location.href='/Producto'">
                    <i class="fas fa-archive"></i> Productos
                </button>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-12 col-md-6 mb-4">
                <button type="button" class="btn btn-info btn-lg w-100 custom-btn" onclick="window.location.href='/Presupuesto'">
                    <i class="fas fa-cogs"></i> Presupuestos
                </button>
            </div>
            <div class="col-12 col-md-6 mb-4">
                <button type="button" class="btn btn-warning btn-lg w-100 custom-btn" onclick="window.location.href='/Venta'">
                    <i class="fas fa-dollar"></i> Ventas
                </button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome JS para los íconos -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>

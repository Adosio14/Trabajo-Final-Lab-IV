@model IEnumerable<EntrepeneurHero.Models.Presupuesto>

@{
    ViewData["Title"] = "Listado de presupuestos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Presupuestos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo presupuesto</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Total Estimado
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aprobado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.TotalEstimado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aprobado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Id)
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
